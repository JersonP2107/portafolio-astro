---
const PROJECTS = [
  {
    title: "Portafolio de Ibrahim",
    description: "Se logro crear el portafolio para mi amigo Ibrahim ",
    link: "https://developer-portfolio-ibrahim-memons-projects.vercel.app",
    github: "https://github.com/ibrahimmemonn/Developer-Portfolio",
    image: "/projects/svg.webp",
    tags: ["HTML", "Tailwind CSS", "React", "Note.js"],
  },
];
---

{
  PROJECTS.map(({ title, description, tags, image }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul>
        {tags.map((tags) => (
          <li>{tags}</li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/10"
        src={image}
        alt={`Captura de pantalla del proyecto ${image}`}
      />
    </article>
  ))
}
